<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_partners_form_ach">
            <field name="name">view.res.partner.form.ach</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <page string="Internal Notes" position="after">
                    <page string="ACH" groups="automated_clearing_house.configure,automated_clearing_house.approve" attrs="{'invisible':[('employee','=',True)]}">
                        <group>
                            <group>
                                <field name="employee" invisible="1"/>
                                <field name="ach_type" widget="select" readwrite="groups('automated_clearing_house.configure')"/>
                                <separator colspan="2"/>
                                <label for="ach_routing" string="Routing #"/>
                                <field name="ach_routing" nolabel="1" readwrite="groups('automated_clearing_house.configure')"/>
                                <label for="ach_account" string="Account #"/>
                                <field name="ach_account" nolabel="1" readwrite="groups('automated_clearing_house.configure')"/>
                            </group>
                            <group>
                                <label for="ach_verified" string="Status"/>
                                <field name="ach_verified" widget="select" nolabel="1" readwrite="groups('automated_clearing_house.approve')"/>
                                <separator colspan="2"/>
                                <label for="ach_date" string="Last Transaction Date"/>
                                <field name="ach_date" nolabel="1" attrs="{'readonly':True}"/>
                                <label for="ach_amount" string="Last Transaction Amount"/>
                                <field name="ach_amount" nolabel="1" attrs="{'readonly':True}"/>
                            </group>
                        </group>
                    </page>
                 </page>
            </field>
        </record>

    </data>
</openerp>
